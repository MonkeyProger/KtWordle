<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/textBar">

        <EditText
            android:id="@+id/et1letter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et2letter"
            android:layout_marginEnd="50dp"
            android:background="#FFEB00"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et2letter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et3letter"
            android:layout_marginEnd="50dp"
            android:background="#FFEB00"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et3letter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:background="#FFEB00"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et4letter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et3letter"
            android:layout_marginStart="50dp"
            android:background="#FFEB00"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et5letter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et4letter"
            android:layout_marginStart="50dp"
            android:background="#FFEB00"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="5dp"
            />
    </RelativeLayout>
</merge>